<process name="change_lessionlocation_calcdate" description="[Calcd] Antrag auf Verlegung des Unterrichtsortes">
  <process-step name="Initialisation" description="Erstellung des Antrages">
    <dialog>
      <teacher-dropdown name="teacher" description="Lehrer/in: "/>
      <class-dropdown name="class" description="Klasse: "/>
    </dialog>
    <dialog>
      <date-dropdown name="date1" description="Datum1: " obligatory="true"/>
      <date-dropdown name="date2" description="Datum2: " obligatory="true"/>
      <number name="difference" description="Differenz: " calculation="[date2]-[date1]"/>
      <number name="somevalue" description="Eine Zahl: "/>
      <date-dropdown name="dateresult" description="Datum Ergebnis: " calculation="[date2]-[somevalue]"/>
      <text name="new_lessonlocation" description="Neuer Unterrichtsort: " obligatory="true"/>
      <text name="first_lessonlocation" description="Ort des Unterrichtsbeginns bei 1. Unterrichtsstunde: "/>
    </dialog>
    <dialog>
      <text name="reason" description="Begründung/Fächerbezug" obigatory="true"/>
    </dialog>
  </process-step>
  <process-step name="validationBySecretary" description="Genehmigung durch Sekretariat" target="secretary">
    <validation locks="true"/>
    <validation.accepted>
    	<receipt draftname="ChangeLocation"/>
    </validation.accepted>
  </process-step>
</process>


