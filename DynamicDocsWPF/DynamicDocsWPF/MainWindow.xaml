<Window x:Class="DynamicDocsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicDocsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525" Background="#3CA4FF" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="InfoBlock" HorizontalAlignment="Center" Text="Guten Tag!" FontSize="28"
                   FontFamily="Segoe UI Light" Margin="20" />
        <Border Grid.Row="1" BorderThickness="2" BorderBrush="White" Background="White" CornerRadius="5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="40,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="6" BlurRadius="5" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock HorizontalAlignment="Left" FontSize="21" Foreground="#3384D1" FontFamily="Segoe UI Light" Margin="10,5,0,0" >
                    <Run Text="Hauptmenü"/>
                </TextBlock>
            <StackPanel Grid.Row="1" Name="ViewHolder" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Margin="40,20" MaxWidth="700">
                <Button Name="MainMenu_BtnNewProcessInstance" Click="MainMenu_BtnNewProcessInstance_OnClick"
                        Content="Prozess starten" Width="250" Height="35"
                        VerticalAlignment="Center" Margin="10" Background="#2196f3" Foreground="White" FontWeight="Black">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="3" BlurRadius="5" />
                    </Button.Effect>
                </Button>       
                <Button Name="MainMenu_BtnViewInstances" Click="MainMenu_BtnViewInstances_OnClick"
                        Content="Prozesse ansehen" Width="250" Height="35"
                        VerticalAlignment="Center" Margin="10" Background="#2196f3" Foreground="White" FontWeight="Black">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="3" BlurRadius="5" />
                    </Button.Effect>
                </Button>   
                <Button Name="MainMenu_BtnUploadProcess" Click="MainMenu_BtnUploadProcess_OnClick"
                        Content="Vorlagen verwalten" Width="250" Height="35"
                        VerticalAlignment="Center" Margin="10" Background="#2196f3" Foreground="White" FontWeight="Black">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="3" BlurRadius="5" />
                    </Button.Effect>
                </Button>       
                <Button Name="MainMenu_BtnManagePermissions" Click="MainMenu_BtnNewProcessInstance_OnClick"
                        Content="Berechtigungen verwalten" Width="250" Height="35"
                        VerticalAlignment="Center" Margin="10" Background="#2196f3" Foreground="White" FontWeight="Black">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="3" BlurRadius="5" />
                    </Button.Effect>
                </Button>       
                
                <TextBlock Name="NoPermissionText" Visibility="Collapsed" FontSize="18" Foreground="DarkGray" TextWrapping="Wrap">
                    <Run Text="Nichts zu sehen?"/>
                    <LineBreak/>
                    <Run Text="Vermutlich fehlen Ihnen Berechtigungen."/> 
                    <LineBreak/>
                    <Run Text="Bitte wenden Sie sich an einen Administrator."/>
                    </TextBlock>
            </StackPanel>
           </Grid>
        </Border>
    </Grid>
</Window>