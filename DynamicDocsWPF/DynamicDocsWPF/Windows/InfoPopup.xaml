<Window x:Class="DynamicDocsWPF.Windows.InfoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DynamicDocsWPF"
        mc:Ignorable="d"
        Title="Information" Height="Auto" Width="450" MaxHeight="350"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="2" RadiusX="8" RadiusY="8" Fill="#4BC3FF">
            <Rectangle.Effect>
                <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="3" BlurRadius="5"/>
            </Rectangle.Effect>
        </Rectangle>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Width="Auto">
            <TextBlock Name="InfoBlock" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Stretch" TextWrapping="Wrap" FontSize="22"
                       FontFamily="Segoe UI Light" Margin="20"/>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Name="Accept" Click="Accept_OnClick" Grid.Row="2" Content="BestÃ¤tigen" Width="100" Height="35"
                    VerticalAlignment="Center" Margin="20" Background="#2196f3" Foreground="White" FontWeight="Black">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="3" BlurRadius="5" />
                </Button.Effect>
            </Button>
            <Button Name="Decline" Click="Decline_OnClick" Grid.Row="2" Content="Abbrechen" Width="100" Height="35"
                    VerticalAlignment="Center" Margin="20" Background="#F3002F" Foreground="White" FontWeight="Black">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="-70" Opacity="0.5" ShadowDepth="3" BlurRadius="5" />
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>